    <ImageButton
        android:id="@+id/im_upload"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/cloud_upload"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/add_gesture_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Type New gesture" />

    <ImageButton
        android:id="@+id/im_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="18dp"
        android:layout_toStartOf="@+id/im_delete"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/icon_add" />

    <ImageButton
        android:id="@+id/im_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/im_clear"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/im_clear"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/delete_icon_extra" />

    <ImageButton
        android:id="@+id/im_clear"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/add_gesture_text"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/clear_icon_extra" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/im_add"
        android:adjustViewBounds="true"
        android:text="Gesture List"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gesture_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/textView"
        android:layout_marginEnd="50dp"
        android:adjustViewBounds="true"
        android:text="Classifications"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/borderLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textView"
        android:background="#c4c0c0" />



    <View
        android:id="@+id/verticalLine"
        android:layout_width="2dp"
        android:layout_height="245dp"
        android:layout_below="@id/borderLine"
        android:layout_marginStart="9dp"
        android:layout_centerHorizontal="true"
        android:background="#c4c0c0" />
        <!--android:layout_toEndOf="@id/listView"-->

    <!--gesture List View-->
    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/verticalLine"
        android:layout_below="@+id/borderLine"></ListView>

    <!--Classifier List View-->
    <ListView
        android:id="@id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignTop="@id/listView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/verticalLine"
        android:layout_marginStart="9dp"/>
        <!--android:layout_toEndOf="@+id/verticalLine"-->


    <TextView
        android:id="@+id/live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:text="Live Box"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_below="@+id/live"
        android:layout_marginStart="10dp"
        android:background="#c4c0c0" />

    <Button
        android:id="@+id/bt_train"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/or_text"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/or_text"
        android:fadingEdge="none|horizontal|vertical"
        android:text="Train" />

    <TextView
        android:id="@+id/gesture_detected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text=""
        android:textSize="40sp" />

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="OR"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_load"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/or_text"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/or_text"
        android:fadingEdge="none|horizontal|vertical"
        android:text="Load" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gesture_detected"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:visibility="invisible" />

    <!--<TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/or_text"
        android:layout_alignEnd="@+id/gesture_title"
        android:text="status percent" />-->

</RelativeLayout>