<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/iVibrate"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="false"

        android:scaleType="fitXY"
        android:src="@drawable/vibrate_icon" />

    <ToggleButton
        android:id="@+id/iEMG"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/iVibrate"
        android:adjustViewBounds="true"
        android:background="@drawable/toggleselector"
        android:checked="false"
        android:cropToPadding="false"

        android:scaleType="fitXY"
        android:text=""
        android:textOff=""
        android:textOn="" />


    <TextView
        android:id="@+id/gestureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Myo Not Connected"
        android:textSize="25dp" />

    <com.echo.holographlibrary.LineGraph
        android:id="@+id/holo_graph_view"
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/iEMG"
        android:layout_below="@+id/gestureTextView"
        android:layout_toStartOf="@+id/iEMG" />

